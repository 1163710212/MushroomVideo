<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/black"
    android:clipChildren="false">
    <TextureView
        android:id="@+id/videoShower"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/videoBottomBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#22000000"
        android:visibility="invisible"
        android:clickable="true"
        android:focusable="true"
        android:clipChildren="false">
        <TextView
            android:id="@+id/videoCurrentTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_marginStart="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/videoSeekBar"/>
        <SeekBar
            android:id="@+id/videoSeekBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toRightOf="@id/videoCurrentTime"
            app:layout_constraintRight_toLeftOf="@id/videoTotalTime"
            android:maxHeight="1dp"
            android:minHeight="1dp"
            android:max="100"
            android:background="@null"
            android:progressDrawable="@drawable/video_seek_bar_bg"
            android:thumb="@drawable/video_seek_bar_thumb"/>
        <TextView
            android:id="@+id/videoTotalTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toRightOf="@id/videoSeekBar"
            app:layout_constraintRight_toLeftOf="@id/td"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:id="@+id/td"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="清晰度"
            app:layout_constraintRight_toLeftOf="@id/screenControllerBtn"
            app:layout_constraintLeft_toRightOf="@id/videoTotalTime"
            android:visibility="invisible"/>
        <RelativeLayout
            android:id="@+id/screenControllerBtn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toRightOf="@id/td"
            app:layout_constraintRight_toRightOf="@id/videoBottomBar">
            <ImageView
                android:id="@+id/screenControllerImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_video_magnify"/>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.example.video.mymedia.view.DefinitionView
        android:id="@+id/videoDefinition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="40dp"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/videoTopBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:visibility="invisible">
        <RelativeLayout
            android:id="@+id/videoBackBtn"
            android:layout_width="50dp"
            android:layout_height="40dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/icon_video_back"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/posterImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/videoControlBtn"
        android:layout_width="81dp"
        android:layout_height="81dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_icon_play_white_162"/>
    <ImageView
        android:id="@+id/videoPauseBtn"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_icon_closed_white"
        android:visibility="invisible"/>
    <ProgressBar
        android:id="@+id/videoLoading"
        android:layout_width="81dp"
        android:layout_height="81dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:indeterminateDrawable="@drawable/video_loading"
        android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>